= form_with model: @task, url: tasks_path, method: :post do |f|
  = f.label 'Candidate'
  %br
  = f.fields_for :assignments do |assignment|
    = render "assignment_fields", f: assignment
  = link_to_add_fields "Add Field", f, :assignments 
  %br
  = f.label :title
  %br
  = f.text_field :title
  %br
  = f.label :description
  %br
  = f.text_field :description
  %br
  %br
  = f.submit 'submit'
