= form_with model: @task, url: tasks_path, method: :post do |f|
  = f.label 'Candidate  '
  %br
  = f.fields_for :candidate_ids do |ff|
    = f.select :candidate_ids, Candidate.all.collect {|c| [ c.name, c.id ] }, { :prompt => "Select", }, { multiple: true }
  %br
  = f.label :title
  %br
  = f.text_field :title
  %br
  = f.label :description
  %br
  = f.text_field :description
  %br
  %br
  = f.submit 'submit'
